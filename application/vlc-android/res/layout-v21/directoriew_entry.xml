<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vlc="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="bgColor"
            type="int" />

        <variable
            name="clickListener"
            type="View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{clickListener}"
        android:longClickable="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:background="@{bgColor}"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ml_item_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            vlc:layout_constraintStart_toStartOf="parent"
            vlc:layout_constraintTop_toTopOf="parent"
            vlc:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            android:padding="16dp"
            vlc:srcCompat="@drawable/lb_ic_in_app_search"
            android:background="@drawable/ic_menu_folder" />

        <TextView
            android:id="@+id/ml_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            vlc:layout_constraintTop_toTopOf="parent"
            vlc:layout_constraintStart_toEndOf="@+id/ml_item_thumbnail"
            vlc:layout_constraintEnd_toStartOf="@+id/item_more"
            vlc:layout_constraintBottom_toTopOf="@+id/ml_item_time"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="@string/directories"
            style="@style/VLC.TextViewTitle" />





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
